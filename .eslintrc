{
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "pragma": "React",  // Pragma to use, default to "React"
        "version": "15.3" // React version, default to the latest React stable release
      }
    },
    "rules": {
      "max-len": [1, 120, 2, {ignoreComments: true}],
      "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 2}],
      "comma-dangle": ["off", "always"],
      "no-unused-vars": ["off", { "vars": "all", "args": "after-used" }],
      "import/no-extraneous-dependencies": ["off", {"devDependencies": false, "optionalDependencies": false, "peerDependencies": false}],
      "import/no-named-as-default": ["warn", "always"],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}